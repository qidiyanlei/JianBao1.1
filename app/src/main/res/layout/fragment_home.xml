<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/mFrag_home_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/home_title">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:src="@drawable/log" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_home_search_normal"
            android:visibility="gone" />
    </RelativeLayout>

    <bgs.com.jianbao11.view.PullToRefrushView
        android:id="@+id/mPullToRefrushView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></bgs.com.jianbao11.view.PullToRefrushView>
</LinearLayout>
