<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/fragment_icon"
            android:layout_width="140dp"
            android:layout_height="170dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/fragment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:textColor="#1C1C1C"
                android:singleLine="true"
                android:text="这是在测试这一条文字的长度对位置的影响"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/p"
                android:layout_marginTop="5dp"
                android:layout_below="@id/fragment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="#FF3030"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/fragment_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1982"
                    android:textSize="20sp"
                    android:textColor="#FF3030"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_below="@id/p"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="14sp"
                    android:textColor="#1C1C1C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布时间："/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#1C1C1C"
                    android:id="@+id/fragment_issue_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016.11.29"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_below="@id/p"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textSize="14sp"
                    android:textColor="#1C1C1C"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="下架时间："/>
                <TextView
                    android:textSize="14sp"
                    android:textColor="#1C1C1C"
                    android:id="@+id/fragment_final_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2016.12.29"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#FF4500"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注度："/>
                <TextView
                    android:textSize="20sp"
                    android:textColor="#FF4500"
                    android:id="@+id/fragment_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="编号："/>
                <TextView
                    android:id="@+id/fragment_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123"
                    android:textColor="#8B658B"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>